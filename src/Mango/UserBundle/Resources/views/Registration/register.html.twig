{% extends "UserBundle::layout.html.twig" %}

{% block fos_user_content %}
  <div class="contenu">
  	<h1>Inscription</h1>
  	{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form'}}) }}
  		<div class="form-group">
      		{{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'col-12 control-label'}}) }}
      		{{ form_errors(form.username) }}
      		<div class="col-12 col-lg-10">
        			{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
     			</div>
    		</div>
    		<div class="form-group">
      		{{ form_label(form.email, "Email", {'label_attr': {'class': 'col-12 control-label'}}) }}
      		{{ form_errors(form.email) }}
      		<div class="col-12 col-lg-10">
        			{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
     			</div>
    		</div>
    		<div class="form-group">
      		{{ form_label(form.plainPassword.first, "Mot de passe", {'label_attr': {'class': 'col-12 control-label'}}) }}
      		{{ form_errors(form.plainPassword.first) }}
      		<div class="col-12 col-lg-10">
        			{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
     			</div>
    		</div>
    		<div class="form-group">
      		{{ form_label(form.plainPassword.second, "Confirmation du mot de passe", {'label_attr': {'class': 'col-12 control-label'}}) }}
      		{{ form_errors(form.plainPassword.second) }}
      		<div class="col-12 col-lg-10">
        			{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
     			</div>
    		</div>
    		{{ form_rest(form) }}
  		  <div class="col-12">
          <input type="submit" value="S'inscrire" class="btn col-12 col-lg-4" />
  	    </div>
  	{{ form_end(form) }}
  </div>
{% endblock %}
