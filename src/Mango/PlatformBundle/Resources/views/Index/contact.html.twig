{% extends "::layout.html.twig" %}

{% block title %}
  Nous contacter - {{ parent() }}
{% endblock %}

{% block body %}
  <section id="contact" class="contenu">
    <div class="row">
      <div class="col-12">
      	<h1>Nous contacter</h1>
      	{% for key, messages in app.session.flashbag.all() %}

          {% for message in messages %}
            <div class="alert alert-{{ key }}">
              {{ message|trans({}, 'notice') }}
            </div>
          {% endfor %}

        {% endfor %}
      	<p>Pour toutes questions supplémentaires, demande de partenariat ou autre, veuillez utiliser le formulaire suivant.</p>
      </div>
      {{ form_start(form, {'attr': {'class': 'col-12'}}) }}

      	{{ form_errors(form) }}
        <div class="form-row">
        	<div class="form-group col-md-6">
          	{{ form_label(form.firstName, "Prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
          	{{ form_errors(form.firstName) }}
          	<div class="col-12 col-md-10 col-lg-10 col-xl-10">
            		{{ form_widget(form.firstName, {'attr': {'class': 'form-control form-control-sm'}}) }}
         		</div>
        	</div>
        	<div class="form-group col-md-6">
          	{{ form_label(form.lastName, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
          	{{ form_errors(form.lastName) }}
          	<div class="col-12 col-md-10 col-lg-10 col-xl-10">
            		{{ form_widget(form.lastName, {'attr': {'class': 'form-control form-control-sm'}}) }}
          	</div>
        	</div>
        </div>
      	<div class="form-group">
        	{{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        	{{ form_errors(form.email) }}
        	<div class="col-12 col-md-11 col-lg-11 col-xl-11">
          		{{ form_widget(form.email, {'attr': {'class': 'form-control form-control-sm'}}) }}
        	</div>
      	</div>
      	<div class="form-group">
        	{{ form_label(form.subject, "Sujet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        	{{ form_errors(form.subject) }}
        	<div class="col-12 col-md-11 col-lg-11 col-xl-11">
          		{{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
        	</div>
      	</div>
      	<div class="form-group">
        	{{ form_label(form.body, "Votre message", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        	{{ form_errors(form.body) }}
        	<div class="col-12 col-md-11 col-lg-11 col-xl-11">
          		{{ form_widget(form.body, {'attr': {'class': 'form-control form-control-lg'}}) }}
        	</div>
      	</div>
        <div class="col-12">
      	 {{ form_widget(form.Envoyer, {'attr': {'class': 'btn col-12 col-md-11 col-lg-4'}}) }}
        </div>
      	{{ form_rest(form) }}

      {{ form_end(form) }}
    </div>
  </section>
{% endblock %}