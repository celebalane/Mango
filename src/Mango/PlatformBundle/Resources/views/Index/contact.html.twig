{% extends "::layout.html.twig" %}

{% block title %}
  Nous contacter - {{ parent() }}
{% endblock %}

{% block body %}
	<h1>Nous contacter</h1>
	{% for key, messages in app.session.flashbag.all() %}

    {% for message in messages %}

      <div class="alert alert-{{ key }}">
        {{ message|trans({}, 'notice') }}
      </div>

    {% endfor %}

  {% endfor %}
	<p>Pour toutes questions supplémentaires, demande de partenariat ou autre, veuillez utiliser le formulaire suivant.</p>
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  		{{ form_errors(form) }}

  		<div class="form-group">
    		{{ form_label(form.firstName, "Prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    		{{ form_errors(form.firstName) }}
    		<div class="col-10">
      			{{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
   			</div>
  		</div>
  		<div class="form-group">
    		{{ form_label(form.lastName, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    		{{ form_errors(form.lastName) }}
    		<div class="col-10">
      			{{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
    		</div>
  		</div>
  		<div class="form-group">
    		{{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    		{{ form_errors(form.email) }}
    		<div class="col-10">
      			{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    		</div>
  		</div>
  		<div class="form-group">
    		{{ form_label(form.subject, "Sujet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    		{{ form_errors(form.subject) }}
    		<div class="col-10">
      			{{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
    		</div>
  		</div>
  		<div class="form-group">
    		{{ form_label(form.body, "Votre message", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    		{{ form_errors(form.body) }}
    		<div class="col-10">
      			{{ form_widget(form.body, {'attr': {'class': 'form-control'}}) }}
    		</div>
  		</div>
  		{{ form_widget(form.Envoyer, {'attr': {'class': 'btn btn-primary'}}) }}
  		{{ form_rest(form) }}

  	{{ form_end(form) }}
{% endblock %}