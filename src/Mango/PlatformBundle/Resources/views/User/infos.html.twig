{% extends "::layout.html.twig" %}

{% block title %}
  Mes informations - {{ parent()}}
{% endblock %}

{% block body %}
	<section class="view">
		<h1>Mes informations</h1>
		<div class="row">
			<div class="col-12 col-md-4">
				<h2 class="col-12">Mes coordonnées</h2>
				<p class="col-12"><span>Pseudo :</span> {{ infos.username }}</p>
				<p class="col-12"><span>Email :</span> {{ infos.email }}</p>
				<p class="col-12"><span>Téléphone :</span> {{ infos.phone }}</p>
				<div class="col-12">
					<a href="#" class="btn col-12 col-md-8">Modification</a>
				</div>
			</div>
			<div class="col-12 col-md-4 infos">
				<h2>Changement mot de passe</h2>

				{% for message in app.flashes('success') %}
				    <div class="alert alert-success">
				        {{ message }}
				    </div>
				{% endfor %}

				<a href='{{ path("fos_user_change_password") }}' class="btn col-12 col-md-8">Changer mon mot de passe</a>
			</div>
			<div class="col-12 col-md-4 infos">
				<h2>Suppression du compte</h2>
				<p id="infos-danger"><span class="fas fa-exclamation-circle"></span> Attention toute suppression du compte est définitive.<br> Les informations et annonces associées au compte seront perdues.</p>
				<form action="{{ path('mango_platform_user_info') }}" method="post">
		        	<input type="submit" value="Supprimer mon compte" class="btn col-12 col-md-8" />
		        	{{ form_rest(form) }}
		      	</form>
		    </div>
		</div>
		<div class="row" id="infos-retour">
			<div class="col-12">
				<a href="{{ path('mango_platform_user') }}" class="btn col-12 col-md-2" id="btn-return-delete">Retour</a>
			</div>
		</div>
	</section>
{% endblock %}