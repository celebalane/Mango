{% extends "::layout.html.twig" %}

{% block title %}
  Louer - {{ parent()}}
{% endblock %}

{% block body %}
	<section id="index-rent">
		<h1>Location</h1>
		<ul class="row">
			{% for rent in listRents %}
		      <li class="rent col-3">
		      	<a href="{{ path('mango_platform_view_rent', {'id':rent.id}) }}">
		      		<div class="cover">
		      			<img src="{{ asset(rent.image.coverUrl) }}" alt="{{ rent.image.alt }}" class="img-fluid">
		      		</div>
		      		<div class="row cover-text">
		      			<p class="col-6">{{ rent.city.name }}</p>
		      			<p class="col-6 text-right">{{ rent.date|date('d/m/Y') }}</p>
			      		<h3 class="col-12">{{ rent.title }}</h3>
			      		<p class="col-12 text-right price">{{ rent.price }} â‚¬</p>
		      		</div>
		      	</a> 
		      </li>
		    {% else %}
		      <li>Votre bonheur n'est pas encore disponible, veuillez nous excuser</li>
		    {% endfor %}
		</ul>
	</section>
{% endblock %}